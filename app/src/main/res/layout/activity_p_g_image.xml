<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageSelectionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".SignUpActivities.PG.PGImageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Image 1"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/DodgerBlue"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_01"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/LightBlue" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Image 2"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/DodgerBlue"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_02"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/LightBlue" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Image 3"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/DodgerBlue"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_03"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/LightBlue" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Image 4"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/DodgerBlue"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_04"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/LightBlue" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Image 5"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/DodgerBlue"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_05"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/LightBlue" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Image 6"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/DodgerBlue"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_06"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/LightBlue" />

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/activity_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Select Image"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/DodgerBlue"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/select_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/RoyalBlue"
                android:text="Select"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                app:rippleColor="@color/LightBlue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/upload_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/RoyalBlue"
                android:text="Upload"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                app:rippleColor="@color/LightBlue" />

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Blue"
            android:fontFamily="monospace"
            android:text="Done"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="25dp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:rippleColor="@color/LightBlue" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/image_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/LightBlue"
            android:fontFamily="sans-serif-condensed"
            android:text="Image size should be less than 1MB"
            android:textAlignment="center"
            android:textColor="@color/Blue"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>